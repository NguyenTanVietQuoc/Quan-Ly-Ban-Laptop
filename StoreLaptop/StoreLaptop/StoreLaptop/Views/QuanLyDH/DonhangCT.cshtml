@using StoreLaptop.ServiceReference;
@{
    ViewBag.Title = "DonhangCT";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    var stt = 0;
}
<p style="font-size:20px; color:#4A0477">Chi tiết đơn hàng</p>
<table>
    <tr id="tr_1">
        <th width="50">STT</th>
        <th width="50">Mã DH</th>
        <th width="50">Mã SP</th>
        <th width="200">Số lượng</th>
        <th width="200">Giá</th>
    </tr>
    @foreach(var i in ViewBag.dhct){
        stt++;
        ViewBag.stt = stt;
    <tr>
        <th>@ViewBag.stt</th>
        <th>@i.idDH</th>
        <th>@i.idSP</th>
        <th>@i.SoLuong</th>
        <th>@i.Gia</th>
    </tr>
    }  
</table>
<style>
    table{
        margin:auto;
    }

    td, th {
        border: solid 1px;
    }

    tr:hover {
        background-color: #3A3A3A;
        color: #ffffff;
    }

        tr:hover a {
            color: #ffffff;
        }

    #tr_1 th {
        height:40px;
        border: solid 1px #000000;
        background-color: #4A0477;
        color: #ffffff;
    }

        #tr_1 th a {
            color: #fff;
        }

</style>

