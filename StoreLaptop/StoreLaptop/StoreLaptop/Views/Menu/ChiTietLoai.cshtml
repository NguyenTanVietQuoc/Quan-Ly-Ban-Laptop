@using StoreLaptop.ServiceReference;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SanPham>
@{
    ViewBag.Title = "ChiTietLoai";
    Layout = "~/Views/Layout/LayoutNguoiDung.cshtml";
    @section Slider{}
}

<p class="text-danger">@ViewBag.loai</p>
@foreach (var item in Model)
        {
            var gia = item.Gia;
            var thu = String.Format("{0:0,0}", gia);
    <div class="col-sm-4">
        
        <div class="product-image-wrapper">
            
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src="~/AnhSP/@item.Hinh" height="200" />
                    <h2>@thu VNĐ</h2>
                    <p>@item.TenSP</p>
                    <a href="@Url.Action("XemChiTiet","SanPham", new { @idSP=item.idSP})" id="btncart" class="btn btn-default add-to-cart"><i class="fa fa-hand-o-right"></i>Xem Chi Tiết</a>
                    <a href="#" id="btncart" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm Vào Giỏ</a>
                </div>
            </div>

            
        </div>
            
    </div>
        }
<div class="menutrang">
    @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount*@
    @Html.PagedListPager(Model, page => Url.Action("ChiTietLoai","Menu", new { page=page, idLoai=ViewBag.idloai}))
</div>


