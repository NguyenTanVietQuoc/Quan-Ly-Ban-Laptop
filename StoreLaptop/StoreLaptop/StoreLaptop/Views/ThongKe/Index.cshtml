@using StoreLaptop.ServiceReference;
@using System;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    
}

<table>
    <tr id="tr_1">
        <th width="200">Hãng sản xuất</th>
        <th width="200">Số sản phẩm bán được</th>
        <th width="200">Doanh thu</th>
    </tr>
    @foreach (var i in ViewBag.hsx)
    {

        for (var j = i.idHSX; j < i.idHSX+1 ; j++)
        {
            
            
    <tr>
        <th>@i.TenHSX</th>
        <th>@ViewBag.a[j]</th>
        <th>@string.Format("{0:0,0}",ViewBag.gia[j])</th>
    </tr>
    }
    }
</table>
     

  
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
    google.load("visualization", "1", { packages: ["corechart"] });
    google.setOnLoadCallback(drawChart);
    function drawChart() {

        var data = google.visualization.arrayToDataTable([
          ['Hãng sản xuất', 'Số sản phẩm bán được'],
          
        @foreach (var i in ViewBag.hsx)
          {

              for (var j = i.idHSX; j < i.idHSX + 1; j++)
              {
             
                  @:['@i.TenHSX',      @ViewBag.gia[j]],
              
                  }}
          //['Work', 11],
          //['Eat', 2],
          //['Commute', 2],
          //['Watch TV', 2],
          //['Sleep', 7]
        ]);

        var options = {
            title: 'Biểu đồ thể hiện tổng doanh thu'
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
    }
</script>
    <div id="piechart" style="width: 900px; height: 500px;"></div>


<script type="text/javascript">
    google.load("visualization", "1.1", { packages: ["bar"] });
    google.setOnLoadCallback(drawStuff);

    function drawStuff() {
        var data = new google.visualization.arrayToDataTable([
          ['Move', 'Sản phẩm'],
            @foreach (var i in ViewBag.hsx)
          {

              for (var j = i.idHSX; j < i.idHSX + 1; j++)
              {

                  @:['@i.TenHSX',      @ViewBag.a[j]],

                  }}
          //["King's pawn (e4)", 44],
          //["Queen's pawn (d4)", 31],
          //["Knight to King 3 (Nf3)", 12],
          //["Queen's bishop pawn (c4)", 10],
          //['Other', 3]
        ]);

        var options = {
            title: 'Biểu đồ thể hiện số sản phẩm bán được',
            width: 900,
            legend: { position: 'none' },
            chart: { subtitle: '' },
            axes: {
                x: {
                    0: { side: 'top', label: '' } // Top x-axis.
                }
          
            },
            bar: { groupWidth: "90%" },
            annotations: {
            textStyle: {
            fontName: 'Times-Roman',
            fontSize: 18}}
        };

        var chart = new google.charts.Bar(document.getElementById('top_x_div'));
        // Convert the Classic options to Material options.
        chart.draw(data, google.charts.Bar.convertOptions(options));
    };
</script>
    <div id="top_x_div" style="width: 900px; height: 500px;"></div>

    <style>
        td img {
            max-width: none;
        }

        td, th {
            border: solid 1px #808080;
        }

        tr:hover {
            background-color: #3A3A3A;
            color: #ffffff;
        }

            tr:hover a {
                color: #ffffff;
            }

        #tr_1 th {
            border: solid 1px #000000;
            background-color: #4A0477;
            color: #ffffff;
        }

            #tr_1 th a {
                color: #090df5;
            }
           
    </style>
