@using StoreLaptop.ServiceReference;
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    var stt = 0;
}
<p style="font-size:20px; color:#4A0477">Quản lý Khách hàng</p>
<table align="center">
    <tr id="tr_1">
        <th width="50">STT</th>
        <th width="50">Mã KH</th>
        <th width="150">Họ tên</th>
        <th width="200">Email</th>
        <th width="100" align="center">Điên thoại</th>
        <th width="200" align="center">Địa chỉ</th>

        <th width="90" align="center">Ngày sinh</th>
        <th width="50" align="center">Giới tính</th>
        <th width="90" align="center">Ngày đăng ký</th>
        <th></th>
        @*<th width="100" align="center">Kích hoạt</th>        
        <th>Trạng thái</th>*@
       
    </tr>
    @foreach (var item in ViewBag.kh)
    {

        <tr>
            @{stt++; ViewBag.stt = stt;}

            <th align="center">@ViewBag.stt</th>
            <th align="center">@item.idKH</th>
            <td align="center">@item.HoTen</td>
            <td>@item.Email</td>
            <td align="center">@item.DienThoai</td>
            <td>@item.DiaChi</td>

            <td align="center">@string.Format("{0:yyyy/MM/dd}", item.NgaySinh)</td>
            <td align="center">@if(1 == int.Parse(item.GioiTinh)) { ViewBag.gioitinh = "Nam"; } else { ViewBag.gioitinh = "Nữ"; }@ViewBag.gioitinh</td>
            
            <td align="center">@item.NgayDK</td>
            <th><a onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này')" href="@Url.Action("XoaKH", "QuanLyKH", new { id=@item.idKH})">Xóa</a></th>
            @*<td align="center">
                @{if (1 == item.KichHoat)
                { ViewBag.KichHoat = "Đã kích hoạt"; }                
                else { ViewBag.KichHoat = "Chờ duyệt"; }
                @ViewBag.KichHoat}
        </td>
        <th>
            @if (1 != item.KichHoat) 
            { ViewBag.a = "Kích hoạt"; }
            else { ViewBag.a = ""; }
            
           
            <a href="#" onclick="$('#@item.idKH').click();">@ViewBag.a </a>
           
             @using (Html.BeginForm("Duyet", "QuanLyKH", new { idKH = @item.idKH }))
            {  <input type="submit" value="" id="@item.idKH" style="display:none" />
            }

    </th>*@
</tr>
    }
</table>

<style>
    td img {
        max-width: none;
    }

    td, th {
        border: solid 1px;
    }

   tr:hover {
        background-color:#3A3A3A;
        color:#ffffff;
    }
    tr:hover a {
        color:#ffffff;
    }

    #tr_1 th {
        height:40px;
        border: solid 1px #000000;
        background-color: #4A0477;
        color: #ffffff;
    }

        #tr_1 th a {
            color: #090df5;
        }
</style>
