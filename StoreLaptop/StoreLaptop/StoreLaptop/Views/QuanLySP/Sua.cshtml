@model StoreLaptop.ServiceReference.SanPham

@{
    ViewBag.Title = "Sua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Chỉnh sửa sản phẩm</h2>
<p>@ViewBag.thongbao</p>
<p>@ViewBag.ThongbaoAll</p>
@using (Html.BeginForm("Sua", "QuanLySP", new {id=@Model.idSP}, FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal">
        
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <div class="form-group">
            <label class="control-label col-md-2" for="TenSP"> Tên sản phẩm</label>
            <div class="col-md-10">
                <input name="TenSP" value="@Model.TenSP" />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2" for="Gia">Giá</label>
            <div class="col-md-10">
                <input name="Gia" value="@Model.Gia" />
            </div>
        </div>

        <div class="form-group">
            <img src="~/AnhSP/@Model.Hinh" height="50" /><br />
            @Html.LabelFor(model => model.Hinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                <input type="file" name="fileUpload" />
               
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-md-2" for="TonKho">Tồn kho</label>
            <div class="col-md-10">
                <input name="TonKho" value="@Model.TonKho" />
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label class="control-label col-md-2" for="idHSX"> Hảng sản xuất</label>
                @Html.DropDownList("hsx")
                @Html.ValidationMessageFor(model => model.idHSX, "", new { @class = "text-danger" })
                
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="AnHien">Ẩn/Hiện</label>
            <div class="col-md-10">
                @*@Html.DropDownList("AnHien")*@
                <select name="AnHien">
                    <option value="1" @{if (1 == Model.AnHien) { ViewBag.hien = "selected"; }} @ViewBag.hien>Hiện</option>
                    <option value="0" @{if (0 == Model.AnHien) { ViewBag.an = "selected"; } } @ViewBag.an>Ẩn</option>
                </select>
            </div>
        </div>
        <div class="form-group" style="clear:both">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="MoTa">@Model.MoTa</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Trở lại trang quản lý sản phẩm", "Index", new { id = ViewBag.idhsx })
</div>
<script>tinymce.init({selector: 'textarea'})</script>
<style>
    label {
        padding-top:3px !important;
        clear: both;
    }
</style>