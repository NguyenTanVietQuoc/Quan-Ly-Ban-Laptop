@using StoreLaptop.ServiceReference;
@{
    ViewBag.Title = "Quản lý Hãng sản xuất";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    var stt = 0;
}
<p style="font-size:20px; color:#4A0477">Quản lý Hãng sản xuất</p>
<table width="600">
    <tr id="tr_1">
        <th width="50">STT</th>
        <th width="300">Tên hãng sản xuất</th>
        <th width="100">Ẩn/Hiện</th>
        <th><a href="@Url.Action("Them","QuanLyHSX")">Thêm</a></th>
    </tr>
    
    @foreach (var i in ViewBag.hsx) { 
    <tr>
        @{stt++;
          ViewBag.stt = @stt;}
        <th>@ViewBag.stt</th>
        <th>@i.TenHSX</th>
        <th>@{if (1 == i.AnHien) { ViewBag.AnHien = "Hiện"; }
              else { ViewBag.AnHien = "Ẩn"; }
    }@ViewBag.AnHien</th>
        <th><a href="@Url.Action("Sua", "QuanLyHSX", new { id=i.idHSX })">Sửa</a></th>
    </tr>
    }
</table>
<style>
    table{
        margin:auto;
    }
    td, th {border:solid 1px;}
   tr:hover {
        background-color:#3A3A3A;
        color:#ffffff;
    }
    tr:hover a {
        color:#ffffff;
    }
    
     #tr_1 th{
        height:40px;
        border:solid 1px #000000;
        background-color:#4A0477;
        color:#ffffff;
    }
        #tr_1 th a {
            color: #fff;
        }
</style>
